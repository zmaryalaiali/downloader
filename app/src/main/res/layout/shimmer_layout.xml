<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/gray"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/gray" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shimmer_videoView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/gray"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/shimmer_videoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_shimmer_videoView"
            android:layout_margin="8dp"
            android:background="@color/gray"
            android:maxLines="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shimmer_videoChannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shimmer_videoTitle"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/shimmer_downloadBtn"
            android:background="@color/gray"
            android:maxLines="1"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/shimmer_downloadBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/shimmer_videoTitle"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/shimmer_share"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/shimmer_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/shimmer_videoTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@color/gray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_shimmer1_videoView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/gray"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/shimmer1_videoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_shimmer1_videoView"
            android:layout_margin="8dp"
            android:background="@color/gray"
            android:maxLines="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shimmer1_videoChannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shimmer1_videoTitle"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/shimmer1_downloadBtn"
            android:background="@color/gray"
            android:maxLines="1"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/shimmer1_downloadBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/shimmer1_videoTitle"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/shimmer1_share"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/shimmer1_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/shimmer1_videoTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@color/gray" />

    </RelativeLayout>

</LinearLayout>