<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_home_videoView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/download" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_home_videoView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-150dp"
        android:src="@drawable/play_video_1" />


    <TextView
        android:id="@+id/tv_home_videoDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_home_videoView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-40dp"
        android:maxLines="1"
        android:text="22:45"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:padding="3dp"/>

    <TextView
        android:id="@+id/tv_home_videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_home_videoView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-40dp"
        android:maxLines="1"
        android:text="4Kviews"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:padding="3dp" />

    <TextView
        android:id="@+id/home_videoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_home_videoView"
        android:maxLines="2"
        android:text="new York jazz lounge with relaxing jazz Bar classics "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/home_videoChannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_videoTitle"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/home_downloadBtn"
        android:maxLines="1"
        android:text="new York jazz lounge "
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/home_downloadBtn"
        android:layout_width="20sp"
        android:layout_height="40dp"
        android:layout_below="@id/home_videoTitle"
        android:layout_marginEnd="20sp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/download" />

